<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="413dp"
        android:layout_height="674dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:drawable/divider_horizontal_dark"
                    app:srcCompat="@drawable/ic_back" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="306dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:text="글쓰기"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/divider_horizontal_dark"
                    android:text="완료" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="625dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="625dp"
                    android:orientation="vertical">


                    <!-- 날짜 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/some_id"
                            android:layout_width="41dp"
                            android:layout_height="31dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="30dp"
                            android:gravity="center_vertical"
                            android:text="날짜"
                            android:textSize="15dp" />

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="28dp"
                            android:layout_height="36dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"

                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            app:srcCompat="@drawable/calendar" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/yyyy_mm_dd_"
                        android:layout_width="177dp"
                        android:layout_height="31dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="22dp"
                        android:gravity="center_vertical"
                        android:text="yyyy년 mm월 dd일" />
                    <!-- 시간 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matching_time"
                            android:layout_width="40dp"
                            android:layout_height="31dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="24dp"
                            android:gravity="center_vertical"
                            android:text="시간" />

                        <ImageButton
                            android:id="@+id/imageButton4"
                            android:layout_width="34dp"
                            android:layout_height="31dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"

                            android:layout_marginTop="26dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            app:srcCompat="@drawable/clock" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/matching_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="22dp"
                        android:gravity="center_vertical"
                        android:text="오후 HH시 MM분" />

                    <TextView
                        android:id="@+id/matiching_place"
                        android:layout_width="70dp"
                        android:layout_height="31dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:text="장소" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBox7"
                            android:layout_width="153dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="음식점 고르기" />

                        <CheckBox
                            android:id="@+id/checkBox8"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="동네 고르기" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="18dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:layout_weight="1"
                            android:text="1. 동작구 대방동" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="31dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="2. 영등포구 문래동" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="3. " />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/matiching_food"
                        android:layout_width="70dp"
                        android:layout_height="31dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:text="음식 분류" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/food1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="한식" />

                        <CheckBox
                            android:id="@+id/food2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="분식" />

                        <CheckBox
                            android:id="@+id/food3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="중식" />

                        <CheckBox
                            android:id="@+id/food4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="일식" />

                        <CheckBox
                            android:id="@+id/food5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="양식" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/food6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="아시안" />

                        <CheckBox
                            android:id="@+id/food7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="패스트푸드" />

                        <CheckBox
                            android:id="@+id/food8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="디저트" />

                        <CheckBox
                            android:id="@+id/food9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="22dp"
                            android:text="기타" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/food10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="22dp"
                        android:text="잇메이트와 상의" />

                    <TextView
                        android:id="@+id/matiching_appeal"
                        android:layout_width="131dp"
                        android:layout_height="31dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:text="잇메이트에게 어필" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/custom_matching_appeal"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>